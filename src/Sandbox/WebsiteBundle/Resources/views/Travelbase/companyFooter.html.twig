{% if root is defined %}
    <nav class="col-xs-12 col-sm-3 col-md-3 col--padded doormat">
        <h5 class="doormat__title"><a href="{{ path('_slug', { 'url': root.slug }) }}">{{ root.title }}</a></h5>
        <ul class="list-reset doormat__link-list">
            {% for company in companies %}
                {% if company.title|length > 40 %}
                    {% set ltitle = company.title[:40] ~ '...' %}
                {% else %}
                    {% set ltitle = company.title %}
                {% endif %}
                <li class="doormat__list-item">
                    <a href="{{ path('_slug', { 'url': company.slug }) }}" class="link--gray doormat__link">{{ ltitle }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
{% endif %}