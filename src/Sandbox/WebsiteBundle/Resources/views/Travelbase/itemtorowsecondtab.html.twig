<div class="col-xs-12">
    <div class="row">
        <div class="no-padding col-xs-3 col-sm-1">
            {#date#}
            <strong><span class="text-muted">{{ date }}</span></strong>
        </div>
        <div class="no-padding col-xs-9 col-sm-11">
            <div class="row">
                <div class="col-xs-12 col-sm-6">
                    {#trip#}
                    <table>
                        <tr>
                            <td width="1%">
                                <strong>{{ departure|raw }}</strong>
                            </td>
                            <td style="">
                                <div class="trip-path-spacer-arrow-wrapper trip-path-spacer-arrow-wrapper-init" style="width: 100%;">
                        <span class="trip-path-spacer-line">
                            <div></div>
                        </span>
                                    <span class="trip-path-spacer-arrow"></span>
                                </div>
                            </td>
                            <td width="2%" class="nowrap">
                                <strong>{{ destination|raw }}</strong>
                            </td>
                            <td style="">
                                <div class="trip-path-spacer-arrow-wrapper trip-path-spacer-arrow-wrapper-init" style="width: 100%;">
                        <span class="trip-path-spacer-line">
                            <div></div>
                        </span>
                                    <span class="trip-path-spacer-arrow"></span>
                                </div>
                            </td>
                            <td width="1%">
                                <strong>{{ departure|raw }}</strong>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-12 col-sm-6">
                    {#info#}
                    <div class="row">
                        {#hotel#}
                        <div class="col-xs-4">
                            {{ hotelcol|raw }}
                        </div>
                        {#dayes#}
                        <div class="col-xs-3 col-sm-2">
                            {{ item.duration }} {{ days_short }}
                        </div>
                        {#price#}
                        <div class="hidden-xs col-xs-4 col-sm-3">
                            {{ lastCol|raw }}
                        </div>
                        <div class="col-xs-5 col-sm-3">
                            <div class="price text-right trip-cost"><p>{{ item.price|round }}€</p> <a target="_blank" href="{{ item.link }}" class="btn btn-info trip-btn-cost">{{ item.price|round }}€</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

