{% extends 'SandboxWebsiteBundle:Page:layout.html.twig' %}

{% block show_tab %}hotels{% endblock %}

{% block club %}{% endblock %}

{% block breadcrumbs %}{% endblock breadcrumbs %}

{% block content %}
    <div class="container">

        <iframe onload='resizeIframe(this);' id="booking-frame" name="booking" src="about:blank" frameborder="0" style="width: 100%" height="1"></iframe>
    </div>

    <script>
        function resizeIframe(obj) {
            //obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';

            $("#booking-frame").css('height', '2000px');

        }

        $(document).ready(function () {
            $('#destination').val('{{ ss }}');
            $('#availcheck').attr('checked', {{ idf }});
            $('#b_checkin_day').val('{{ checkin_monthday }}');
            $('#b_checkin_month').val('{{ checkin_year_month }}');
            $('#b_checkout_day').val('{{ checkout_monthday }}');
            $('#b_checkout_month').val('{{ checkout_year_month }}');

            if('{{ ss }}'.length > 0){
                $('#booking-form').submit();
            }
        });
    </script>
{% endblock %}
