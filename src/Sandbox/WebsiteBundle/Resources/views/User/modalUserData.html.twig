        });


        $('#modal-registration').on('shown.bs.modal', function (e) {
            var tab = $(e.relatedTarget).data('tab');
            if(tab){
                $('#modal-club-tabs').find('a[href="#' + tab + '"]').tab('show');
            }
        })
    });
</script>