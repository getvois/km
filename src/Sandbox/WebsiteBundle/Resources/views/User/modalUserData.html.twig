<!-- Modal -->
<div class="modal fade" id="modal-user-data" tabindex="-1" role="dialog" aria-labelledby="modal-user-data" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-content-img-{{ random([1,2,3]) }}">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h2 class="modal-title" id="myModalLabel">
                    {{ 'welcome.to.the.club'|trans({}, 'frontend') }}
                </h2>
            </div>
            <div class="modal-body">
                <div class="info-message"></div>
                {% include '@SandboxWebsite/User/menu.html.twig' %}
            </div>
        </div>
    </div>
</div>

