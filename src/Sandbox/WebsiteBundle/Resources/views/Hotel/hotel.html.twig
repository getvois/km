<div class="col-md-4 well hotell">
    <h3>{{ hotel.title }}</h3>
    <p>{% if hotel.city %}{{ hotel.city }}{% else %}{{ hotel.cityParish }}{% endif %}</p>
    <p>{{ hotel.street }}</p>

    {% set package = hotel.cheapestPackage %}
    {% if package %}
        {% if package.image %}
            <img src="{{ package.image }}" class="img-responsive"/>
        {% elseif hotel.mainPhoto %}
            <img src="{{ asset(hotel.mainPhoto.url) }}" class="img-responsive"/>
        {% elseif hotel.buildingPhoto %}
            <img src="{{ asset(hotel.buildingPhoto.url) }}" class="img-responsive"/>
        {% endif %}
        {{ package.minPrice }}

    {% elseif hotel.mainPhoto %}
        <img src="{{ asset(hotel.mainPhoto.url) }}" class="img-responsive"/>
    {% elseif hotel.buildingPhoto %}
        <img src="{{ asset(hotel.buildingPhoto.url) }}" class="img-responsive"/>
    {% endif %}
    <p>
        <a class="btn btn-primary" href="{{ path('_slug', {'url' : get_node_translation_for(hotel).fullSlug }) }}">{{ 'read.more'|trans({}, 'frontend') }}</a>
    </p>
</div>