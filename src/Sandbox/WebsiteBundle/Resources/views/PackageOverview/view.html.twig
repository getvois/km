{% extends 'SandboxWebsiteBundle:Layout:layout.html.twig' %}
{% block content %}
    <div class="row">

        {% for package in pagerfanta.CurrentPageResults %}
            <div class="col-md-4 well packagel">
                <h3>{{ package.title }}</h3>
                <p>{{ package.description }}</p>
                <p>{{ package.minprice }}</p>
                {% if package.image %}
                    <p><img src="{{ package.image }}" class="img-responsive"/></p>
                {% endif %}
                <p>
                    <a class="btn btn-primary" href="{{ get_node_translation_for(package).fullSlug }}">{{ 'read.more'|trans({}, 'frontend') }}</a>
                </p>
            </div>
        {% endfor %}

        {#{% if pagerfanta.haveToPaginate %}#}
            {#{{ pagerfanta(pagerfanta, 'twitter_bootstrap3') }}#}
        {#{% endif %}#}
        {# does not paginate because of the route controller #}
    </div>
{% endblock %}
