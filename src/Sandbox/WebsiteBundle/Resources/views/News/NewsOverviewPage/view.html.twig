{% extends 'SandboxWebsiteBundle:Layout:layout.html.twig' %}
{% block content %}

    <h2>{{ page.title }}</h2>

    {% include '@SandboxWebsite/SeoModule/top.html.twig' %}

    {{ render_pageparts(page, 'main') }}

    {% set count = 0 %}
    {% if pagerfanta.nbResults > 0 %}
        <div class="content">
            {% for article in pagerfanta.currentPageResults %}
                <article class="main-article main-article--summary article__overview--list-item"> 
                    {% set articlenode = get_node_translation_for(article) %}
                    <div class="row">
						<div class="col-md-12">
		                    <header>

                                {% include '@SandboxWebsite/Layout/toplaces.html.twig' with {'item' : article, 'ignore' : 1} %}

							    <time>{{ article.date | datelocale}}</time>
		                    	<h2>
		                    		
		                    		{% if article.priceFromLabel or article.priceFrom %}
                                    <div class="pull-right">
                                    <div class="price-from price-from-img">
                                        <div class="price-from-inner pull-right">
                                            <span style="font-size:16px;">
                                               {% if article.priceFrom %} {{ article.priceFrom }}  {% endif %} {% if article.priceFrom and article.priceFromLabel %}/{% endif %} {% if article.priceFromLabel %}{{ article.priceFromLabel|trans({}, 'frontend', app.request.locale) }}{% endif %}
                                            </span>
                                        </div>
                                    </div>
                                    </div>
                                	{% endif %}
		                    		
		                    		<a href="{{ articlenode.url }}">{{ article.title }}</a>
		                    	</h2>
		                    <div class="clear"></div>
		                    </header>  
			       		</div>
					</div>
					<div class="row">
				   		
				   		
				   			
				   		<div class="{% if article.image or article.companies[0].logo %}col-md-10{% else %}col-md-12{% endif %}">
							<p></p>
		                    <p>{{ article.summary }}</p>
		                    <div class="row">
		                        	<div class="col-md-12">
	                                    <a href="{{ path("_slug", {'url':articlenode.url}) }}" class="btn btn-primary main-article__readmore">
	                                        {{ 'article.readmore' | trans }}
	                                    </a>
                                	</div>
                       			</div>
		                    <div class="clear"></div> 
						</div>		
							
   						
				   		{% if article.image %}
                                <div class="col-md-2 nopadding-right">
                                    <a href="{{ path("_slug", {'url':articlenode.url}) }}">
                                        <img src="{{ asset(article.image.url | imagine_filter("300x")) }}" alt="" class="img-responsive pull-right"/>
                                    </a> 
                                </div>
                            {% elseif article.companies|length > 0 %}
                                {% if article.companies[0].logo %}
                                    <div class="col-md-2 nopadding-right">
                                       <br /> <a href="{{ path("_slug", {'url':articlenode.url}) }}">
                                            <img src="{{ asset(article.companies[0].logo.url | imagine_filter("300x")) }}" alt="" class="img-responsive pull-right"/>
                                        </a>
                                    </div>
                                {% endif %}
                        {% endif %}
				   		
				   		
				   		
   					</div>
                    
                </article>
                {% set count = count + 1 %}
            {% endfor %}
        </div>
        {% if pagerfanta.haveToPaginate() %}
            {{ pagerfanta(pagerfanta) }}
        {% endif %}
    {% endif %}

    {% include '@SandboxWebsite/SeoModule/bottom.html.twig' %}
    {#{% include 'KunstmaanArticleBundle:AbstractArticleOverviewPage:view.html.twig' %}#}
{% endblock %}

{% block sidebar %}
    {% include '@SandboxWebsite/Tag/tagblock.html.twig' %}
{% endblock %}
{% block seoFooter %}
    {% include '@SandboxWebsite/SeoModule/footer.html.twig' %}
{% endblock %}